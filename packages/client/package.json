{
	"name": "@protokol/client",
	"description": "A Light TypeScript Client Supporting Protokol.com Transactions And Public ARK REST API",
	"version": "1.0.0-beta.30",
	"homepage": "https://docs.protokol.com/",
	"bugs": {
		"url": "https://github.com/protokol/nft-plugins/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/protokol/nft-plugins.git"
	},
	"keywords": [
		"protokol",
		"ark",
		"core",
		"sdk",
		"nft",
		"blockchain"
	],
	"contributors": [
		"Žan Kovač <zan@protokol.com",
		"Kristjan Košič <kristjan@protokol.com>"
	],
	"license": "CC-BY-NC-SA-4.0",
	"files": [
		"/dist"
	],
	"main": "dist/index",
	"types": "dist/index",
	"scripts": {
		"build": "yarn clean && tsc",
		"build:watch": "yarn build -w",
		"clean": "rimraf .coverage dist tmp",
		"prepublishOnly": "yarn build",
		"test": "jest --detectOpenHandles --forceExit",
		"test:coverage": "cross-env jest __tests__ --coverage --detectOpenHandles --forceExit",
		"test:watch": "jest --watchAll",
		"publish": "yarn build && yarn npm publish --access public",
		"publish:beta": "yarn build && yarn npm publish --access public --tag beta --tolerate-republish"
	},
	"dependencies": {
		"@arkecosystem/client": "^1.1.4",
		"is-url-superb": "^4.0.0",
		"ky": "^0.23.0",
