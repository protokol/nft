{
	"name": "@protokol/cli",
	"version": "1.0.0-beta.30",
	"description": "A simple command line utility to create and broadcast NFT transactions.",
	"license": "MIT",
	"homepage": "https://docs.protokol.com/nft/",
	"bugs": {
		"url": "https://github.com/protokol/nft-plugins/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/protokol/nft-plugins.git"
	},
	"keywords": [
		"protokol",
		"ark",
		"core",
		"sdk",
		"nft",
		"blockchain"
	],
	"contributors": [
		"Žan Kovač <zan@protokol.com",
		"Amadej Pevec <amadej@protokol.com>",
		"Kristjan Košič <kristjan@protokol.com>",
		"Joshua Noack <joshua@ark.io>",
		"Sebastijan Kuzner <sebastijan@ark.io>"
	],
	"files": [
		"/dist",
		"/bin",
		"/oclif.manifest.json"
	],
	"bin": "./bin/run",
	"main": "dist/index",
	"types": "dist/index",
	"scripts": {
		"build": "yarn clean && tsc",
		"build:watch": "yarn build -w",
		"clean": "rimraf .coverage dist tmp",
		"postpack": "rm -f oclif.manifest.json",
		"prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme"
	},
	"dependencies": {
		"@arkecosystem/core-kernel": "^3.0.0-alpha.13",
		"@arkecosystem/core-magistrate-crypto": "^3.0.0-alpha.13",
		"@arkecosystem/crypto": "^3.0.0-alpha.13",
		"@oclif/command": "^1",
		"@oclif/plugin-help": "^3",
		"@protokol/guardian-crypto": "workspace:packages/guardian-crypto",
		"@protokol/nft-base-crypto": "workspace:packages/nft-base-crypto",
		"@protokol/nft-exchange-crypto": "workspace:packages/nft-exchange-crypto",
		"fs-extra": "^9.0.1"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.7.0",
		"@types/eslint": "^7.2.0",
		"@types/eslint-plugin-prettier": "^3.1.0",
		"@types/hapi__boom": "^7.4.1",
		"@types/hapi__joi": "^16.0.4",
		"@types/is-url-superb": "3.0.0",
		"@types/jest": "^26.0.10",
		"@types/lodash.orderby": "4.6.6",
		"@types/node": "^14.0.27",
		"@types/prettier": "^2.0.0",
		"@types/rimraf": "^3.0.0",
		"@types/semver": "7.3.2",
		"@types/uuid": "^7.0.2",
		"@typescript-eslint/eslint-plugin": "^3.9.1",
		"@typescript-eslint/parser": "^3.9.1",
		"codecov": "^3.7.2",
		"cross-env": "^7.0.2",
		"eslint": "^7.7.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-jest": "^23.8.2",
		"eslint-plugin-prettier": "^3.1.2",
		"eslint-plugin-simple-import-sort": "^5.0.2",
		"got": "^11.5.2",
		"jest": "^26.4.0",
		"jest-extended": "^0.11.5",
		"jest-localstorage-mock": "^2.4.3",
		"nock": "^13.0.4",
		"npm-check-updates": "^7.1.0",
		"prettier": "^2.0.5",
		"rimraf": "^3.0.2",
		"ts-jest": "~26.3.0",
		"typedoc": "~0.19.0",
		"typescript": "~4.0.2"
	},
	"oclif": {
		"commands": "./src/commands",
		"bin": "nft-tx-tester",
		"topics": {
			"send": {
				"description": "Send transactions of various types"
			}
		},
		"plugins": [
			"@oclif/plugin-help"
		]
	}
}
